<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_form_inherit_ge9" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.ge9</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr = "//field[@name='partner_id']" position="after">
                    <label for="new_customer"/>
                    <div class="o_row">
                        <field name="new_customer"/>
                        <button name="add_discount" type="object" string="Add Discount" attrs="{'invisible':[('new_customer','=', False),]}"/>
                    </div>
                    
                </xpath>
            </field>
    </record>
</odoo>